<Window x:Class="FakturacniSystem.Windows.newCreateInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakturacniSystem.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Vytvoření Faktury"
        Height="450"
        Width="800">
    <Grid>

        <Label Content="🧾 Formulář pro tvorbu faktury"
               HorizontalAlignment="Center"
               Margin="0,10,0,0"
               VerticalAlignment="Top"/>

        <ComboBox HorizontalAlignment="Left"
                  Margin="656,54,0,0"
                  VerticalAlignment="Top"
                  Width="120">
            <ComboBoxItem Content="Zdeněk Horák"/>
        </ComboBox>
        <Label Content="Vystavil:" 
               HorizontalAlignment="Left" 
               Margin="656,23,0,0" 
               VerticalAlignment="Top"/>
        <Label Content="Odběratel:" 
               HorizontalAlignment="Left" 
               Margin="25,23,0,0" 
               VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" 
                 Margin="25,56,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120"/>



    </Grid>
</Window>
