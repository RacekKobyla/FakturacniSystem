<Window x:Class="FakturacniSystem.Windows.newCreateInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakturacniSystem.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Vytvoření Faktury"
        Height="450"
        Width="400">
    <Grid>

        <Label Content="Formulář pro tvorbu faktury"
               HorizontalAlignment="Center"
               Margin="0,23,0,0"
               VerticalAlignment="Top"/>

        <GroupBox Header="Informace o odběrateli" 
                  Margin="75,79,75,151">
            <Canvas>
                <Label Content="Odběratel:" 
               HorizontalAlignment="Left" 
                       Canvas.Left="1" 
                       Canvas.Top="10" 
                       VerticalAlignment="Center"/>

                <TextBox x:Name="OdberatelJmeno"
                         TextWrapping="Wrap" 
                         Width="120" 
                         HorizontalAlignment="Center" 
                         Canvas.Left="80" 
                         Canvas.Top="15" 
                         VerticalAlignment="Center"/>


                <Label Content="Adresa:"
                       HorizontalAlignment="Center"
                       Canvas.Left="1" 
                       Canvas.Top="50"
                       VerticalAlignment="Top"/>
                <TextBox x:Name="OdberatelAdresa"
                    TextWrapping="Wrap"  
                    Width="120" 
                    Canvas.Left="80" 
                    Canvas.Top="55" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"/>


                <Label Content="IČ:" 
                       HorizontalAlignment="Left"
                       Canvas.Left="1" 
                       Canvas.Top="90" 
                       VerticalAlignment="Center"/>
                <TextBox x:Name="OdberatelIC"
                         TextWrapping="Wrap" 
                         Width="120" 
                         Canvas.Left="80" 
                         Canvas.Top="95" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Top"/>


                <Label Content="DIČ:" 
                       HorizontalAlignment="Left" 
                       Canvas.Left="1" 
                       Canvas.Top="130" 
                       VerticalAlignment="Center"/>
                <TextBox x:Name="OdberatelDIC"
                         TextWrapping="Wrap" 
                         Width="120" 
                         HorizontalAlignment="Left" 
                         Canvas.Left="80" 
                         Canvas.Top="135" 
                         VerticalAlignment="Top"/>



            </Canvas>
        </GroupBox>


        <ComboBox x:Name="VystavilComboBox"
                  HorizontalAlignment="Left"
                  Margin="205,318,0,0"
                  VerticalAlignment="Top"
                  Width="120">
            <ComboBoxItem Content="Zdeněk Horák"/>
        </ComboBox>

        <Label Content="Vystavil:" 
               HorizontalAlignment="Left" 
               Margin="147,316,0,0" 
               VerticalAlignment="Top"/>

        <Button Content="Zavřít"
                Click="CloseWindow"
                HorizontalAlignment="Left"
                Margin="255,360,0,0" 
                VerticalAlignment="Top" 
                Height="30" 
                Width="70" 
                Background="#FFD40000" 
                Foreground="White"/>

        <Button Content="Vygenerovat"
                HorizontalAlignment="Left"
                Margin="151,360,0,0" 
                VerticalAlignment="Top" 
                Height="30" 
                Width="80" 
                Foreground="White" 
                Background="#FF05B300"/>



    </Grid>
</Window>
