<Window x:Class="FakturacniSystem.Windows.newCreateInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vytvoření faktury" 
        Height="420" 
        Width="700" 
        ResizeMode="NoResize"
        Background="HotPink"
        Foreground="White">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tvorba faktury"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>

        <Grid Grid.Row="1" 
              Margin="0,4,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Levá část: výběr odběratele -->
            <GroupBox Header="Odběratel" 
                      Grid.Column="0" 
                      Padding="8" 
                      Margin="0,0,378,10" 
                      Grid.ColumnSpan="3">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,6">
                        <ComboBox x:Name="CustomerComboBox" 
                                  Width="200" 
                                  HorizontalAlignment="Left" 
                                  DisplayMemberPath="FullName"/>
                        
                        <Button x:Name="OpenRegisterButton"
                                Content="Nový"
                                Width="40"
                                Margin="6,0,0,0"
                                Click="OpenRegister_Click"/>
                    </StackPanel>

                    <TextBlock Text="(Vyberte odběratele z registru)"
                               FontStyle="Italic"
                               FontSize="11"
                               Margin="0,4,0,0"/>

                    <GroupBox Header="Vybraný odběratel" 
                              Margin="0,8,0,8" 
                              x:Name="CustomerPreviewGroup" Height="184">
                        <StackPanel>
                            <TextBlock x:Name="SelectedCustomerNameText" 
                                       FontWeight="Bold" />
                            <TextBlock x:Name="SelectedCustomerAddressText" />
                            <TextBlock x:Name="SelectedCustomerICText" />
                            <TextBlock x:Name="SelectedCustomerDICText" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <!-- Mezera -->
            <GridSplitter Grid.Column="2"
                          Width="6"
                          HorizontalAlignment="Stretch"
                          Margin="208,0,354,0"/>

            <!-- Pravá část: data faktury -->
            <GroupBox Header="Data faktury" 
                      Grid.Column="2" 
                      Padding="8" 
                      Margin="105,-5,0,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Služba:"
                               Grid.Row="0" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               Margin="0,4"/>
                    
                    <ComboBox x:Name="SluzbaComboBox"
                              Grid.Row="0"
                              Grid.Column="1"
                              Margin="0,4" 
                              IsEditable="True" />

                    <TextBlock Grid.Row="1" 
                               Grid.Column="1" 
                               Margin="0,0,0,6" 
                               FontStyle="Italic" 
                               FontSize="12"
                               Text="{Binding ElementName=SluzbaComboBox, Path=Text, StringFormat=Vybraná služba: {0}}"/>

                    <TextBlock Text="Částka (Kč):"
                               Grid.Row="2"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,4"/>
                    
                    <TextBox x:Name="CastkaBox"
                             Grid.Row="2" 
                             Grid.Column="1"
                             Margin="0,4" 
                             IsReadOnly="True"/>

                    <TextBlock Text="Datum vystavení:"
                               Grid.Row="3"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,4"/>
                    
                    <DatePicker x:Name="IssueDatePicker"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,4"/>

                    <TextBlock Text="Datum splatnosti:"
                               Grid.Row="4"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,4"/>
                    
                    <DatePicker x:Name="DueDatePicker"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="0,4"/>

                    <TextBlock Text="Vystavil:"
                               Grid.Row="5"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,4"/>

                    <ComboBox x:Name="VystavilComboBox"
                              Grid.Row="5"
                              Grid.Column="1"
                              Margin="0,4">
                        <ComboBoxItem Content="Zdeněk Horák"/>
                    </ComboBox>

                </Grid>
            </GroupBox>
        </Grid>

        <!-- Footer: jeden zelený button pro uložení do DB a generování TXT -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right" 
                    Margin="0,8,0,0">
            
            <Button Content="Zavřít"
                    Width="80"
                    Margin="0,0,8,0"
                    Click="CloseWindow" 
                    Background="#FFD40000"
                    Foreground="White"/>
            
            <Button Content="Vygenerovat"
                    Width="110" 
                    Click="GenerateAndSave_Click" 
                    Background="#FF05B300" 
                    Foreground="White"/>
            
        </StackPanel>
    </Grid>
</Window>
