<Window x:Class="FakturacniSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakturacniSystem"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Fakturační Systém" 
        Height="200" 
        Width="350"
        Background="HotPink">
    <Grid>

        <Button Content="Tvorba Faktur" 
                x:Name="CreateButton"
                Click="CreateInvoice"
                Foreground="White"
                Background="HotPink"
                HorizontalAlignment="Center" 
                Height="30" 
                VerticalAlignment="Top" 
                Width="300" Margin="0,82,0,0"
                />

        <Button Content="Přehled Faktur a Odběratelů" 
                x:Name="ShowButton"
                Click="ShowInvoices" 
                Foreground="White"
                Background="HotPink"
                HorizontalAlignment="Center" 
                Height="30" Margin="0,117,0,0" 
                VerticalAlignment="Top" 
                Width="300" />

        <Label Content="Fakturační Systém" 
               HorizontalAlignment="Center"
               Margin="0,10,0,0"
               VerticalAlignment="Top"/>

    </Grid>
</Window>
